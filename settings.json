{
    "colorscheme": "gruvbox",
    "cursorline": false,
    "diff": false,
    "literate": false,
    "lsp.server": "python=pylsp,go=gopls,typescript=deno lsp,javascript=deno lsp,markdown=deno lsp,json=deno lsp,jsonc=deno lsp,rust=rls,lua=lua-lsp",
    "lsp.formatOnSave": true,
    "savecursor": true,
    "saveundo": true,
    "scrollspeed": 1,
    "softwrap": true,
    "statusformatl": " $(modified)$(filename) | $(status.size) ",
    "statusformatr": "  $(opt:encoding) | $(opt:fileformat) | $(opt:filetype) | $(line):$(col) "
}
